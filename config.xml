<?xml version='1.0' encoding='utf-8'?>
<widget id="com.swaas.Kwire" version="4.0" android-versionCode="34" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Kangle</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="view/main.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        
        <splash src="res/android/port-ldpi.png" density="port-ldpi" />
        <splash src="res/android/port-mdpi.png" density="port-mdpi" />
        <splash src="res/android/port-hdpi.png" density="port-hdpi" />
        <splash src="res/android/port-xhdpi.png" density="port-xhdpi" />
        
        <splash src="res/android/land-ldpi.png" density="land-ldpi" />
        <splash src="res/android/land-mdpi.png" density="land-mdpi" />
        <splash src="res/android/land-hdpi.png" density="land-hdpi" />
        <splash src="res/android/land-xhdpi.png" density="land-xhdpi" />
        
        <icon src="res/android/icon-ldpi.png" density="ldpi" />
        <icon src="res/android/icon-mdpi.png" density="mdpi" />
        <icon src="res/android/icon-hdpi.png" density="hdpi" />
        <icon src="res/android/icon-xhdpi.png" density="xhdpi" />

  
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>